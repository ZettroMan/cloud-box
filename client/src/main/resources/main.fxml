<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0"
      style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea"
      fx:controller="com.zettro.java.cloudbox.client.Controller">
    <HBox>
        <TextField fx:id="tfFileName" focusTraversable="false" promptText="Укажите имя файла, который хотите скачать с сервера" HBox.hgrow="ALWAYS" />
        <Button onAction="#pressOnDownloadBtn" text="Скачать" />
        <Button onAction="#pressOnSendBtn" text="Отправить" />
    </HBox>
    <ListView fx:id="filesList" prefHeight="374.0" prefWidth="434.0" VBox.vgrow="ALWAYS" />
</VBox>
